<style type="text/css">
  #plane{
    opacity: 0;
    width: 100%
  }

</style>
<script type="text/javascript" src="/javascripts/lib/_three.min.js"></script>
<script type="text/javascript" src="/javascripts/lib/pilot.js"></script>
<script type="text/javascript" src="/javascripts/lib/airplane.js"></script>
<script type="text/javascript" src="/javascripts/lib/sharpPlane.js"></script>
<script type="text/javascript" src="/javascripts/lib/whiteSharpPlane.js"></script>
<script type="text/javascript" src="/javascripts/lib/brownSharpPlane.js"></script>
<script type="text/javascript" src="/javascripts/lib/doubleWingPlane.js"></script>
<script type="text/javascript" src="/javascripts/lib/index.js"></script>

<% if current_user %>
  <%= render "/welcome/nnav" %>
<% end %>

<script>
  var defaultPlane = true;
  <% if current_user %>
    defaultPlane = false
  <% end %>
</script>

<div class="container">
  
  <div class="jumbotron ">
    <h1 class="text-center">Flight game</h1>        
  </div>
  <% if !current_user %>
    <ul class="nav  nav-bar justify-content-center ">
      <li class="nav-item index-btn">
        <%= link_to "Sign in", new_user_session_path, class: 'nav-link btn btn-outline-success ' %>
      </li>
      <li class="nav-item index-btn">
        <%= link_to "Sign up", new_user_registration_path, class: 'nav-link btn btn-outline-primary ' %>
      </li>
    </ul>
  <% end %>
  <div class="row" style="margin: 32px 0px 0px 0px">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <div id="plane">
      
          </div>
        </div>
      </div>
    </div>
  </div>
    
    

    <div class="row" style="margin: 20px 0px 0px 0px">
      <div class="col">
        <% if current_user %>
          <%= link_to "PLAY", game_index_path, class: 'btn btn-warning btn-lg btn-block', id: 'play-signed' %>
        <% else %>
          <%= link_to "Try for free", game_test_path, class: 'btn btn-warning btn-lg btn-block', id: 'play-not-signed' %>
        <% end %>
      </div>
    
    </div>
    
  </div>






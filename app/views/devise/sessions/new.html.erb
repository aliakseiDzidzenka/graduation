<div class="container">
  <div class="row">
    <h2 class="col-sm-12 h2 text-center">Log in</h2>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        </div>
        <div class="form-group">
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
        </div>
        <div class="form-group">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: 'btn btn-success btn-block'  %>
        </div>
      <% end %>
    </div>
  </div>

  
  <div class="row">
    <div class="col-sm-12 text-center">
      <p style="margin-top: 20px;">Or <%= render "devise/shared/links" %></p>
    </div>

  </div>



</div>

